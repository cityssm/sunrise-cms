{
  "name": "sunrise-cms",
  "version": "1.0.0-beta.5",
  "private": true,
  "description": "Sunrise Cemetery Management System, a web-based application that allows cemetery managers to manage their cemetery records.",
  "homepage": "https://github.com/cityssm/sunrise-cms#readme",
  "bugs": {
    "url": "https://github.com/cityssm/sunrise-cms/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cityssm/sunrise-cms.git"
  },
  "license": "MIT",
  "author": "The Corporation of the City of Sault Ste. Marie",
  "type": "module",
  "exports": {
    ".": "./index.js"
  },
  "scripts": {
    "coverage": "cross-env NODE_ENV=development DEBUG=sunrise:* TEST_DATABASES=true c8 --reporter=lcov --reporter=text --reporter=text-summary node --test --test-concurrency 1 \"./test/*.test.js\"",
    "cy:open": "cypress open --config-file cypress.config.js",
    "cy:run": "cypress run --config-file cypress.config.js",
    "cy:run:firefox": "cypress run --config-file cypress.config.js --browser firefox",
    "dev:live": "cross-env NODE_ENV=development DEBUG=sunrise:* nodemon ./index.js",
    "dev:live:inspect": "cross-env NODE_ENV=development DEBUG=sunrise:* nodemon --inspect ./index.js",
    "dev:test": "cross-env NODE_ENV=development DEBUG=sunrise:*,pdf-puppeteer:* TEST_DATABASES=true nodemon ./index.js",
    "dev:test:inspect": "cross-env NODE_ENV=development DEBUG=sunrise:*,pdf-puppeteer:* TEST_DATABASES=true nodemon --inspect ./index.js",
    "lint:editorconfig": "editorconfig-checker",
    "start": "cross-env NODE_ENV=production node ./index.js",
    "task:puppeteerSetup": "cross-env NODE_ENV=development DEBUG=sunrise:* node ./tasks/puppeteerSetup.task.js",
    "temp:legacyImportFromCsv": "cross-env NODE_ENV=development DEBUG=sunrise:* TEST_DATABASES=true node ./temp/legacyImportFromCsv/index.js",
    "test": "cross-env NODE_ENV=development DEBUG=sunrise:* TEST_DATABASES=true node --test --test-concurrency 1 \"./test/*.test.js\"",
    "test:i18n": "cross-env NODE_ENV=development DEBUG=sunrise:* TEST_DATABASES=true node --test ./test/helpers.i18n.test.js",
    "test:pdf": "cross-env NODE_ENV=development DEBUG=sunrise:*,pdf-puppeteer:*,puppeteer-launch:* TEST_DATABASES=true node --test ./test/helpers.pdf.test.js",
    "test:startup": "cross-env NODE_ENV=development DEBUG=sunrise:* TEST_DATABASES=true STARTUP_TEST=true node ./index.js"
  },
  "dependencies": {
    "@cacheable/node-cache": "^2.0.1",
    "@cityssm/authentication-helper": "^0.6.2",
    "@cityssm/bulma-js": "^1.0.0-rc.3",
    "@cityssm/bulma-sticky-table": "^3.0.2",
    "@cityssm/bulma-webapp-js": "^2.0.0-beta",
    "@cityssm/configurator": "^0.1.0",
    "@cityssm/consigno-cloud-api": "^1.2.0",
    "@cityssm/dynamics-gp": "^1.4.2",
    "@cityssm/express-abuse-points": "^3.1.0",
    "@cityssm/fa-glow": "^0.1.0",
    "@cityssm/fill-block-range": "^0.3.0",
    "@cityssm/jsbarcode-svg": "^0.1.1",
    "@cityssm/ntfy-publish": "^1.1.1",
    "@cityssm/pdf-puppeteer": "^6.4.0",
    "@cityssm/scheduled-task": "^0.3.0",
    "@cityssm/to-millis": "^1.0.1",
    "@cityssm/utils-datetime": "^1.3.0",
    "@fortawesome/fontawesome-free": "^7.2.0",
    "better-sqlite3": "^12.6.2",
    "camelcase": "^9.0.0",
    "chokidar": "^5.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cross-env": "^10.1.0",
    "csrf-csrf": "^4.0.3",
    "debug": "^4.4.3",
    "ejs": "^4.0.1",
    "exit-hook": "^5.1.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.19.0",
    "http-errors": "^2.0.1",
    "i18next": "^25.8.13",
    "i18next-fs-backend": "^2.6.1",
    "i18next-http-backend": "^3.0.2",
    "i18next-http-middleware": "^3.9.2",
    "ical-generator": "^10.0.0",
    "leaflet": "^2.0.0-alpha.1",
    "multer": "^2.0.2",
    "papaparse": "^5.5.3",
    "parse-full-name": "^1.2.7",
    "sanitize-filename": "^1.6.3",
    "session-file-store": "^1.5.0",
    "sunrise-cms-customizations": "^0.0.2"
  },
  "devDependencies": {
    "@cityssm/is-pdf": "^2.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/debug": "^4.1.12",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/leaflet": "^1.9.21",
    "@types/mssql": "^9.1.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.3.1",
    "@types/node-schedule": "^2.1.8",
    "@types/node-windows": "^0.1.6",
    "@types/papaparse": "^5.5.2",
    "@types/parse-full-name": "^1.2.5",
    "@types/session-file-store": "^1.2.6",
    "axe-core": "^4.11.1",
    "cypress": "^15.11.0",
    "cypress-axe": "^1.7.0",
    "editorconfig-checker": "^6.1.1",
    "eslint-config-cityssm": "^38.3.1",
    "nodemon": "^3.1.14",
    "prettier-config-cityssm": "^2.1.1"
  },
  "optionalDependencies": {
    "node-windows": "^1.0.0-beta.8"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
