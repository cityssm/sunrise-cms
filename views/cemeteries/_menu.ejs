<aside class="menu" aria-label="Cemeteries">
  <h2 class="menu-label is-hidden-touch">
    Cemeteries
  </h2>
  <ul class="menu-list">
    <%
    const isCemeterySearch = headTitle === "Cemetery Search";
    const isBurialSiteSearch = headTitle === "Burial Site Search";
    %>
    <li>
      <a
        class="<%= (isCemeterySearch ? 'is-active' : '') %>"
        href="<%= urlPrefix %>/cemeteries"
        title="Cemetery Search">
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon"><i class="fa-regular fa-map"></i></span>
          </div>
          <div class="column is-hidden-touch">Cemetery Search</div>
        </div>
      </a>
      <% if (isCemeterySearch && user.userProperties.canUpdateCemeteries) { %>
      <ul>
        <li>
          <a
            href="<%= urlPrefix %>/cemeteries/new"
            title="Create New Cemetery"
          >
            <span class="is-hidden-touch">Create New Cemetery</span>
            <span class="icon is-hidden-desktop"><i class="fa-solid fa-plus"></i></span>
          </a>
        </li>
      </ul>
      <% } %>
    </li>
    <li>
      <a
        class="<%= (isBurialSiteSearch ? 'is-active' : '') %>"
        href="<%= urlPrefix %>/burialSites"
        title="Burial Site Search"
      >
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon"><i class="fa-solid fa-map-pin"></i></span>
          </div>
          <div class="column is-hidden-touch">Burial Site Search</div>
        </div>
      </a>
      <% if (isBurialSiteSearch && user.userProperties.canUpdateCemeteries) { %>
      <ul>
        <li>
          <a
            href="<%= urlPrefix %>/burialSites/new"
            title="Create New Burial Site"
          >
            <span class="is-hidden-touch">Create New Burial Site</span>
            <span class="icon is-hidden-desktop"><i class="fa-solid fa-plus"></i></span>
          </a>
        </li>
      </ul>
      <% } %>
    </li>
    <li>
      <a
        class="<%= (headTitle === 'Burial Site Map (Beta)' ? 'is-active' : '') %>"
        href="<%= urlPrefix %>/burialSites/map"
        title="Burial Site Map (Beta)"
      >
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon"><i class="fa-solid fa-map-location-dot"></i></span>
          </div>
          <div class="column is-hidden-touch">Burial Site Map (Beta)</div>
        </div>
      </a>
    </li>
  </ul>
  <% if (user.userProperties.canUpdateCemeteries) { %>
  <h2 class="menu-label is-hidden-touch">
    Creator Tools
  </h2>
  <ul class="menu-list">
    <li>
      <a class="<%= (headTitle === "Burial Site Range Creator" ? "is-active" : "") %>"
        href="<%= urlPrefix %>/burialSites/creator"
        title="Burial Site Range Creator">
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon"><i class="fa-solid fa-folder-plus"></i></span>
          </div>
          <div class="column is-hidden-touch">Burial Site Range Creator</div>
        </div>
      </a>
    </li>
    <li>
      <a class="<%= (headTitle === "GPS Coordinate Capture" ? "is-active" : "") %>"
        href="<%= urlPrefix %>/burialSites/gpsCapture"
        title="GPS Coordinate Capture">
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon"><i class="fa-solid fa-crosshairs"></i></span>
          </div>
          <div class="column is-hidden-touch">GPS Coordinate Capture</div>
        </div>
      </a>
    </li>
  </ul>
  <% } %>
  <% if (user.userProperties.isAdmin) { %>
  <h2 class="menu-label is-hidden-touch">
    Administrator Tools
  </h2>
  <ul class="menu-list is-hidden-touch">
    <li>
      <a href="<%= urlPrefix %>/admin/burialSiteTypes"
        title="Burial Site Type Maintenance">
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon"><i class="fa-solid fa-gear"></i></span>
          </div>
          <div class="column is-hidden-touch">Burial Site Type Maintenance</div>
        </div>
      </a>
    </li>
  </ul>
  <% } %>
  <h2 class="menu-label is-hidden-touch">
    Reports
  </h2>
  <ul class="menu-list">
    <li>
      <a href="<%= urlPrefix %>/reports/?tab=cemeteries" title="Cemetery Reports">
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon"><i class="fa-solid fa-file"></i></span>
          </div>
          <div class="column is-hidden-touch">Cemetery Reports</div>
        </div>
      </a>
    </li>
    <li>
      <a 
        href="https://cityssm.github.io/sunrise-cms/docs/cemeteries.html"
        title="Help Documentation"
        rel="noopener noreferrer"
        target="_blank"
      >
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon"><i class="fa-solid fa-circle-question"></i></span>
          </div>
          <div class="column is-hidden-touch">Help</div>
        </div>
      </a>
    </li>
  </ul>
</aside>