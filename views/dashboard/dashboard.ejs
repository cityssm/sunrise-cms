<%- include('../_header'); -%>

<h1 class="title is-1">
  <%= configFunctions.getConfigProperty("application.applicationName") %>
</h1>

<% if (error !== undefined) { %>
<div class="notification is-danger is-light">
  <button class="delete" aria-label="<%= t('common:delete') %>"></button>
  <p>
    <strong><%= t('dashboard:error') %></strong><br />
    <%= error %>
  </p>
</div>
<% } %>

<div class="columns">
  <div class="column">
    <div class="columns">       
      <div class="column">
        <div class="panel">
          <a class="panel-block" href="<%= urlPrefix %>/contracts">
            <div class="media">
              <div class="media-left">
                <i class="fa-solid fa-4x fa-file-contract"></i>
              </div>
              <div class="media-content">
                <h2 class="title is-4 mb-0 has-text-link">
                  <%= t('contracts:contracts') %>
                </h2>
                <p>
                  <%= t('contracts:contractsDescription') %>
                </p>
              </div>
            </div>
          </a>
          <div class="panel-block is-block">
            <% if (user.userProperties.canUpdateContracts) { %>
            <a class="button is-fullwidth is-success is-light mb-2" href="<%= urlPrefix %>/contracts/new">
              <span class="icon">
                <i class="fa-solid fa-plus"></i>
              </span>
              <span><%= t('contracts:newContract') %></span>
            </a>
            <% } %>
            <a class="button is-fullwidth is-link is-light" href="<%= urlPrefix %>/funeralHomes">
              <span class="icon">
                <i class="fa-solid fa-place-of-worship"></i>
              </span>
              <span><%= t('contracts:funeralHomes') %></span>
            </a>
          </div>
        </div>
      </div>
      <div class="column">
        <div class="panel">
          <a class="panel-block" href="<%= urlPrefix %>/workOrders">
            <div class="media">
              <div class="media-left">
                <i class="fa-solid fa-4x fa-hard-hat"></i>
              </div>
              <div class="media-content">
                <h2 class="title is-4 mb-0 has-text-link">
                  <%= t('workOrders:workOrders') %>
                </h2>
                <p>
                  <%= t('workOrders:workOrdersDescription') %>
                </p>
              </div>
            </div>
          </a>
          <div class="panel-block is-block">
            <% if (user.userProperties.canUpdateWorkOrders) { %>
            <a class="button is-fullwidth is-success is-light mb-2" href="<%= urlPrefix %>/workOrders/new">
              <span class="icon">
                <i class="fa-solid fa-plus"></i>
              </span>
              <span><%= t('workOrders:newWorkOrder') %></span>
            </a>
            <% } %>
            <a class="button is-fullwidth is-link is-light" href="<%= urlPrefix %>/workOrders/workday">
              <span class="icon">
                <i class="fa-solid fa-calendar-check"></i>
              </span>
              <span><%= t('workOrders:workdayReport') %></span>
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="columns">
      <div class="column">
        <div class="panel">
          <a class="panel-block" href="<%= urlPrefix %>/burialSites">
            <div class="media">
              <div class="media-left">
                <i class="fa-solid fa-4x fa-map-pin"></i>
              </div>
              <div class="media-content">
                <h2 class="title is-4 mb-0 has-text-link">
                  <%= t('cemeteries:burialSites') %>
                </h2>
                <p>
                  <%= t('cemeteries:burialSitesDescription') %>
                </p>
              </div>
            </div>
          </a>
          <% if (user.userProperties.canUpdateCemeteries) { %>
          <div class="panel-block is-block">
            <a class="button is-fullwidth is-success is-light" href="<%= urlPrefix %>/burialSites/new">
              <span class="icon">
                <i class="fa-solid fa-plus"></i>
              </span>
              <span><%= t('cemeteries:newBurialSite') %></span>
            </a>
            <a class="button is-fullwidth is-link is-light mt-2" href="<%= urlPrefix %>/burialSites/map">
              <span class="icon">
                <i class="fa-solid fa-map-location-dot"></i>
              </span>
              <span><%= t('cemeteries:burialSiteMap') %></span>
            </a>
          </div>
          <% } %>
        </div>
      </div>
      <div class="column">
        <div class="panel">
          <a class="panel-block" href="<%= urlPrefix %>/cemeteries">
            <div class="media">
              <div class="media-left">
                <i class="fa-regular fa-4x fa-map"></i>
              </div>
              <div class="media-content">
                <h2 class="title is-4 mb-0 has-text-link">
                  <%= t('cemeteries:cemeteries') %>
                </h2>
                <p>
                  <%= t('cemeteries:cemeteriesDescription') %>
                </p>
              </div>
            </div>
          </a>
          <% if (user.userProperties.canUpdateCemeteries) { %>
          <div class="panel-block is-block">
            <a class="button is-fullwidth is-success is-light" href="<%= urlPrefix %>/cemeteries/new">
              <span class="icon">
                <i class="fa-solid fa-plus"></i>
              </span>
              <span><%= t('cemeteries:newCemetery') %></span>
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <div class="columns is-multiline">
      <div class="column">
        <div class="panel">
          <a class="panel-block" href="<%= urlPrefix %>/reports">
            <div class="media">
              <div class="media-left">
                <i class="fa-regular fa-4x fa-file"></i>
              </div>
              <div class="media-content">
                <h2 class="title is-4 mb-0 has-text-link">
                  <%= t('dashboard:reportLibrary') %>
                </h2>
                <p><%= t('dashboard:reportLibraryDescription') %></p>
              </div>
            </div>
          </a>
          <div class="panel-block is-block">
            <a class="button is-fullwidth is-link is-light" href="<%= urlPrefix %>/dashboard/updateLog">
              <span class="icon">
                <i class="fa-solid fa-scroll"></i>
              </span>
              <span><%= t('dashboard:updateLog') %></span>
            </a>
          </div>
        </div>
      </div>
      <div class="column">
        <div class="panel">
          <a
            class="panel-block"
            href="https://cityssm.github.io/sunrise-cms/docs"
            rel="noopener noreferrer"
            target="_blank"
          >
            <div class="media">
              <div class="media-left">
                <i class="fa-solid fa-4x fa-circle-question"></i>
              </div>
              <div class="media-content">
                <h2 class="title is-4 mb-0 has-text-link">
                  <%= t('dashboard:helpDocumentation') %>
                </h2>
                <p><%= t('dashboard:helpDescription') %></p>
              </div>
            </div>
          </a>
          <div class="panel-block is-block">
            <a
              class="button is-fullwidth is-link is-light"
              href="https://github.com/cityssm/sunrise-cms"
              title="Latest Updates, Issue Tracker, Say Hello"
              rel="noreferrer"
              target="_blank"
            >
              <span class="icon">
                <i class="fa-brands fa-github"></i>
              </span>
              <span>GitHub</span>
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <% if (user.userProperties.isAdmin) { %>
    <h2 class="title is-3">
      <%= t('admin:adminTools') %>
    </h2>

    <div class="columns">
      <div class="column">
        <div class="panel">
          <a class="panel-block" href="<%= urlPrefix %>/admin/fees">
            <div class="media">
              <div class="media-left">
                <span class="fa-layers fa-4x">
                  <i class="fa-solid fa-dollar-sign"></i>
                  <i class="fa-solid fa-cog" data-fa-transform="shrink-8 right-7 down-5" data-fa-glow="10"></i>
                </span>
              </div>
              <div class="media-content">
                <h2 class="title is-4 mb-0 has-text-link">
                  <%= t('admin:feeManagement') %>
                </h2>
                <p>
                  <%= t('admin:feeManagementDescription') %>
                </p>
              </div>
            </div>
          </a>
          <a class="panel-block" href="<%= urlPrefix %>/admin/contractTypes">
            <div class="media">
              <div class="media-left">
                <span class="fa-layers fa-4x">
                  <i class="fa-solid fa-file-contract"></i>
                  <i class="fa-solid fa-cog" data-fa-transform="shrink-8 right-7 down-5" data-fa-glow="10"></i>
                </span>
              </div>
              <div class="media-content">
                <h2 class="title is-4 mb-0 has-text-link">
                  <%= t('admin:contractTypeManagement') %>
                </h2>
                <p>
                  <%= t('admin:contractTypeManagementDescription') %>
                </p>
              </div>
            </div>
          </a>
          <a class="panel-block" href="<%= urlPrefix %>/admin/burialSiteTypes">
            <div class="media">
              <div class="media-left">
                <span class="fa-layers fa-4x">
                  <i class="fa-solid fa-map-pin"></i>
                  <i class="fa-solid fa-cog" data-fa-transform="shrink-8 right-7 down-5" data-fa-glow="10"></i>
                </span>
              </div>
              <div class="media-content">
                <h2 class="title is-4 mb-0 has-text-link">
                  <%= t('admin:burialSiteTypeManagement') %>
                </h2>
                <p>
                  <%= t('admin:burialSiteTypeManagementDescription') %>
                </p>
              </div>
            </div>
          </a>
          <a class="panel-block" href="<%= urlPrefix %>/admin/tables">
            <div class="media">
              <div class="media-left">
                <span class="fa-layers fa-4x">
                  <i class="fa-solid fa-table"></i>
                  <i class="fa-solid fa-cog" data-fa-transform="shrink-8 right-7 down-5" data-fa-glow="10"></i>
                </span>
              </div>
              <div class="media-content">
                <h2 class="title is-4 mb-0 has-text-link">
                  <%= t('admin:configTableManagement') %>
                </h2>
                <p>
                  <%= t('admin:configTableManagementDescription') %>
                </p>
              </div>
            </div>
          </a>
        </div>
      </div>
      <div class="column">
        <div class="panel">
          <a class="panel-block" href="<%= urlPrefix %>/admin/users">
            <div class="media">
              <div class="media-left">
                <span class="fa-layers fa-4x">
                  <i class="fa-solid fa-users"></i>
                  <i class="fa-solid fa-cog" data-fa-transform="shrink-8 right-7 down-5" data-fa-glow="10"></i>
                </span>
              </div>
              <div class="media-content">
                <h2 class="title is-4 mb-0 has-text-link">
                  <%= t('admin:userManagement') %>
                </h2>
                <p>
                  <%= t('admin:userManagementDescription') %>
                </p>
              </div>
            </div>
          </a>
          <a class="panel-block" href="<%= urlPrefix %>/admin/settings">
            <div class="media">
              <div class="media-left">
                <i class="fa-solid fa-4x fa-sliders"></i>
              </div>
              <div class="media-content">
                <h2 class="title is-4 mb-0 has-text-link">
                  <%= t('admin:settingsManagement') %>
                </h2>
                <p>
                  <%= t('admin:settingsManagementDescription') %>
                </p>
              </div>
            </div>
          </a>
          <a class="panel-block" href="<%= urlPrefix %>/admin/database">
            <div class="media">
              <div class="media-left">
                <i class="fa-solid fa-4x fa-database"></i>
              </div>
              <div class="media-content">
                <h2 class="title is-4 mb-0 has-text-link">
                  <%= t('admin:databaseMaintenance') %>
                </h2>
                <p>
                  <%= t('admin:databaseMaintenanceDescription') %>
                </p>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<%- include('../_footerA'); -%>

<%- include('../_footerB'); -%>